<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Mathematical Interpreter" Height="450" Width="800">
	
	<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="MyTextBox" Margin="10" TextWrapping="Wrap" Text="1 + 1" AcceptsReturn="True" Grid.Column="0" Grid.Row="0"/>

        <TabControl Name="Tab" Grid.Column="1" Grid.Row="0" Margin="10">
            <TabItem Header="Output">
                <ScrollViewer x:Name="MyScrollViewer" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="MyTextBlock" TextWrapping="Wrap" Margin="5"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Graph">
                <oxy:PlotView x:Name="OxyPlotView" Model="{Binding MyModel}" Background="Transparent"/>
            </TabItem>
            <TabItem Header="BNF">
                <ScrollViewer x:Name="ScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden">
                    <TextBox x:Name="BnfTextBox" HorizontalAlignment="Left" Margin="0" TextWrapping="NoWrap" Text="BNF goes here" VerticalAlignment="Top" IsReadOnly="True" BorderThickness="0"/>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Help">
                <TextBox x:Name="HelpTextBox" HorizontalAlignment="Left" Margin="0" TextWrapping="Wrap" Text="Help" VerticalAlignment="Top" IsReadOnly="True" BorderThickness="0"/>
            </TabItem>
        </TabControl>
		

        <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Interpret" Width="100" Height="32" Margin="5" Click="Interpret"/>
                    <Button Content="Plot" Width="100" Height="32" Margin="5" Click="Plot"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Undo" Width="50" Height="32" Margin="5" Click="Undo"/>
                    <Button Content="Redo" Width="50" Height="32" Margin="5" Click="Redo"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button Content="Dark Mode" Width="80" Height="32" Margin="5" Click="DarkMode"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>


